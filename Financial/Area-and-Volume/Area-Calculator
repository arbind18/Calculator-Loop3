    <script>
        let currentShape = 'rectangle';
        let chart = null;
        
        function setShape(shape) {
            currentShape = shape;
            
            // Update buttons
            document.querySelectorAll('.shape-btn').forEach(btn => btn.classList.remove('active'));
            event.currentTarget.classList.add('active');
            
            // Update inputs
            document.querySelectorAll('.input-field').forEach(field => field.classList.remove('active'));
            document.getElementById(`${shape}-inputs`).classList.add('active');
            
            // Reset result
            document.getElementById('result-area').textContent = '0';
            
            // Clear chart
            if (chart) {
                chart.destroy();
                chart = null;
            }
        }
        
        function calculateArea() {
            let area = 0;
            const unit = document.getElementById('unit').value;
            const unitLabel = document.getElementById('unit').options[document.getElementById('unit').selectedIndex].text;
            
            try {
                switch(currentShape) {
                    case 'rectangle':
                        const l = parseFloat(document.getElementById('rect-length').value);
                        const w = parseFloat(document.getElementById('rect-width').value);
                        if (l && w) area = l * w;
                        break;
                    case 'circle':
                        const r = parseFloat(document.getElementById('circle-radius').value);
                        if (r) area = Math.PI * r * r;
                        break;
                    case 'triangle':
                        const b = parseFloat(document.getElementById('tri-base').value);
                        const h = parseFloat(document.getElementById('tri-height').value);
                        if (b && h) area = 0.5 * b * h;
                        break;
                    case 'trapezoid':
                        const b1 = parseFloat(document.getElementById('trap-base1').value);
                        const b2 = parseFloat(document.getElementById('trap-base2').value);
                        const th = parseFloat(document.getElementById('trap-height').value);
                        if (b1 && b2 && th) area = 0.5 * (b1 + b2) * th;
                        break;
                    case 'ellipse':
                        const ea = parseFloat(document.getElementById('ellipse-a').value);
                        const eb = parseFloat(document.getElementById('ellipse-b').value);
                        if (ea && eb) area = Math.PI * ea * eb;
                        break;
                }
                
                document.getElementById('result-area').textContent = area.toFixed(2);
                document.getElementById('result-unit').textContent = `Square ${unitLabel.split(' ')[0]}`;
                
                updateChart(area);
                
            } catch (e) {
                console.error(e);
            }
        }
        
        function updateChart(area) {
            const ctx = document.getElementById('shapeChart').getContext('2d');
            
            if (chart) chart.destroy();
            
            // Create a visual representation based on shape
            // For simplicity, we'll show a bar chart comparing this area to a unit square
            
            chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Calculated Area', 'Unit Square (1x1)'],
                    datasets: [{
                        label: 'Area Comparison',
                        data: [area, 1],
                        backgroundColor: [
                            'rgba(99, 102, 241, 0.6)',
                            'rgba(203, 213, 225, 0.6)'
                        ],
                        borderColor: [
                            'rgb(99, 102, 241)',
                            'rgb(203, 213, 225)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Area'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Area Visualization'
                        }
                    }
                }
            });
        }
        
        // Initialize
        setShape('rectangle');
        // Manually set active class for first button since we called function without event
        document.querySelector('.shape-btn').classList.add('active');
    </script>
</body>
