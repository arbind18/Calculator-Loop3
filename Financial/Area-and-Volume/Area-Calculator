            <button class="shape-btn" onclick="setShape('trapezoid')"><i class="fas fa-draw-polygon"></i> Trapezoid</button>
            <button class="shape-btn" onclick="setShape('ellipse')"><i class="fas fa-egg"></i> Ellipse</button>
        </div>
        
        <div class="calculator-grid">
            <div class="card">
                <h2 style="margin-bottom: 1.5rem; color: var(--text);">Enter Dimensions</h2>
                
